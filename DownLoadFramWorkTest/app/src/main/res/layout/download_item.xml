<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_entry_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:text="id" />

    <TextView
        android:id="@+id/tv_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_entry_id"
        android:layout_marginEnd="-91dp"
        android:layout_centerVertical="true"
        android:text="name" />

    <TextView
        android:id="@+id/tv_entry_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_entry_name"
        android:layout_marginEnd="-91dp"
        android:layout_centerVertical="true"
        android:text="状态" />

    <TextView
        android:id="@+id/tv_entry_current_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_entry_status"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="-52dp"
        android:layout_centerVertical="true"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:text="Download"
        android:id="@+id/btn_download"/>

</RelativeLayout>